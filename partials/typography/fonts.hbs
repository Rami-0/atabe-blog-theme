{{!-- Montserrat Arabic is always loaded as the default font --}}
{{> "typography/montserrat-arabic"}}

{{!-- Sans-serif font is also loaded as fallback for some parts of the theme --}}
{{> "typography/sans"}}

{{#match @custom.title_font "Montserrat Arabic"}}
    {{#match @custom.body_font "Elegant serif"}}
        {{> "typography/serif"}}
    {{/match}}
{{else match @custom.title_font "Modern sans-serif"}}
    {{#match @custom.body_font "Elegant serif"}}
        {{> "typography/serif"}}
    {{/match}}
{{else match @custom.title_font "Elegant serif"}}
    {{> "typography/serif"}}
{{else match @custom.title_font "Consistent mono"}}
    {{> "typography/mono"}}
    {{#match @custom.body_font "Elegant serif"}}
        {{> "typography/serif"}}
    {{/match}}
{{else}}
    {{!-- Default case: Montserrat Arabic is already loaded above --}}
    {{#match @custom.body_font "Elegant serif"}}
        {{> "typography/serif"}}
    {{/match}}
{{/match}}

{{#match @custom.body_font "Elegant serif"}}
    {{> "typography/serif"}}
{{/match}}